---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1 font-serif italic text-gray-500">Biography</div>
    <div class="text-5xl font-bold font-serif mb-4">Linkaili</div>
    <div class="text-2xl py-2 font-light text-base-content/80">
      Student-Athlete (Golf) & Academic Scholar | Class of 2027
    </div>
    
    <div class="py-6 text-lg leading-relaxed text-justify">
      <p class="mb-4">
        Linkaili is a dedicated high school student based in the United States, currently pursuing a rigorous academic curriculum alongside competitive varsity athletics. With a graduation target of 2027, she embodies the <strong>scholar-athlete</strong> idealâ€”demonstrating discipline on the golf course and intellectual curiosity in the classroom.
      </p>
      <p>
        Her academic interests lie at the intersection of <strong>Science and Social Impact</strong>, exploring how analytical thinking can solve community challenges. As a Varsity Golf team captain, she applies strategic planning and resilience learned from sport to her leadership roles.
      </p>
    </div>

    <div class="mt-4 flex gap-4">
      <a class="btn btn-primary" href="/cv">View Academic Profile</a>
      <a class="btn btn-outline" href="mailto:linkaili.2008@gmail.com">Contact for Admissions</a>
    </div>
  </div>

  <div class="divider my-10"></div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 font-serif">Research & Leadership Highlights</div>
  </div>

  <HorizontalCard
    title="Varsity Golf Leadership"
    img="/golf_match.jpg"
    desc="Serving as Team Captain to foster a culture of excellence and sportsmanship. Analyzing performance metrics to improve team strategy."
    url="/cv"
    badge="Athletics"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Environmental Impact Study"
    img="/study.jpg"
    desc="Independent research investigating sustainable water management practices in local golf courses, bridging athletic interest with environmental science."
    url="/projects"
    badge="Research"
  />

  <div class="divider my-10"></div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 font-serif">Selected Essays</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img="/volunteering.jpg" 
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
