---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects | Linkaili" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Athletic Journey</div>
  </div>

  <HorizontalCard
    title="2025 Season Retrospective"
    img="/golf_match.jpg"
    desc="A detailed analysis of my performance during the 2025 High School Golf Season. Includes stroke analysis, tournament results, and lessons learned about mental toughness under pressure."
    url="#"
    badge="Golf"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Training Routine & Fitness Plan"
    img="/profile.jpg"
    desc="My personalized training schedule balancing academic workload and athletic development. Focuses on core strength, flexibility, and consistency."
    url="#"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Academic & Community Projects</div>
  </div>

  <HorizontalCard
    title="Community Junior Golf Clinic"
    img="/volunteering.jpg"
    desc="Founded a weekend workshop introducing golf basics to underprivileged children in the community. Managed logistics, recruited 5 student coaches, and taught 20+ kids."
    url="#"
    badge="Leadership"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Environmental Science Research Paper"
    img="/study.jpg"
    desc="Research project on 'Sustainable Course Management: Water Conservation in Golf Courses'. Presented findings at the school science fair."
    url="#"
    badge="Academic"
  />
</BaseLayout>
