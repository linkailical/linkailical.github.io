---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Academic Profile | Linkaili" sideBarActiveItemID="cv">
  
  <!-- Academic Overview Section -->
  <div class="mb-5">
    <div class="text-3xl w-full font-bold font-serif">Education & Academics</div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
    <div class="bg-base-200 p-6 rounded-xl">
      <h3 class="text-xl font-bold mb-2">High School Diploma</h3>
      <p class="text-sm opacity-75">Expected Graduation: 2027</p>
      <p class="mt-2">[Your High School Name], USA</p>
      <div class="mt-4">
        <span class="badge badge-primary mr-2">GPA: 3.8/4.0 (Unweighted)</span>
        <span class="badge badge-outline">Class Rank: Top 10%</span>
      </div>
    </div>
    <div class="bg-base-200 p-6 rounded-xl">
      <h3 class="text-xl font-bold mb-2">Standardized Testing</h3>
      <ul class="list-disc ml-5 text-sm">
        <li><strong>SAT/ACT:</strong> [To be taken / Score]</li>
        <li><strong>TOEFL/Duolingo:</strong> [Score if applicable]</li>
        <li><strong>AP Scholar Award:</strong> (Candidate)</li>
      </ul>
    </div>
  </div>

  <div class="mb-10">
    <h3 class="text-2xl font-bold mb-4">Rigorous Coursework</h3>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Course Level</th>
            <th>Status/Score</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Calculus AB</td>
            <td>Advanced Placement (AP)</td>
            <td>In Progress</td>
          </tr>
          <tr>
            <td>Physics 1</td>
            <td>Advanced Placement (AP)</td>
            <td>Score: 5</td>
          </tr>
          <tr>
            <td>English Literature</td>
            <td>Honors</td>
            <td>A</td>
          </tr>
          <tr>
            <td>World History</td>
            <td>Honors</td>
            <td>A</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Honors & Awards -->
  <div class="mb-5">
    <div class="text-3xl w-full font-bold font-serif">Honors & Awards</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="Academic Excellence Award"
      subtitle="2024 - [School Name]"
    >
      Awarded to top 5% of students demonstrating outstanding performance in STEM subjects.
    </TimeLineElement>
    <TimeLineElement
      title="MVP (Most Valuable Player)"
      subtitle="2025 - Varsity Golf Team"
    >
      Recognized for exceptional performance and leadership during the regional championship season.
    </TimeLineElement>
  </div>

  <!-- Athletics Section -->
  <div class="mb-5">
    <div class="text-3xl w-full font-bold font-serif">Athletic Profile (Golf)</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="Varsity Team Captain"
      subtitle="2024 - Present"
    >
      Leading weekly practices, mentoring junior players, and coordinating with coaching staff.
    </TimeLineElement>
    <TimeLineElement
      title="Tournament Achievements"
      subtitle="Regional & State Level"
    >
      <ul class="list-disc ml-5">
        <li>Top 5 Finish: [Tournament Name] (2025)</li>
        <li>Qualifying Score: [Score] at [Course Name]</li>
        <li>Handicap Index: [Number] (Verified by USGA)</li>
      </ul>
    </TimeLineElement>
  </div>

  <!-- Extracurriculars -->
  <div class="mb-5">
    <div class="text-3xl w-full font-bold font-serif">Leadership & Service</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="Community Golf Initiative Founder"
      subtitle="2024 - Present"
    >
      Founded a non-profit initiative to provide free golf clinics to underrepresented youth in the local community.
    </TimeLineElement>
  </div>

</BaseLayout>
